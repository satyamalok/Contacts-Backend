# Application Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# PostgreSQL Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=contacts_db
DB_USER=postgres
DB_PASSWORD=ContactsDB#2024!SecurePass
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Settings
# IMPORTANT: This salt is used for API key generation
# Change this to a random string in production!
API_KEY_SALT=test_salt_change_in_production_k8h3j9f2n4m7q1w5

# Logging
LOG_LEVEL=info

# CORS Configuration
# * allows all origins. Restrict in production: https://yourdomain.com
CORS_ORIGIN=*

# WebSocket Configuration
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000

# Frontend URL (update after domain assignment)
FRONTEND_URL=http://localhost:3000

